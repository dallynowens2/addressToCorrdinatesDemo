<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="addressToCorrdinates.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Geo Coding" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="entry" Margin="20"/>
        <Label x:Name="resultLocation"/>
        <Button Text="Geocode" Clicked="Button_Clicked"/>
        <Button Text="Reverse GeoCode" Clicked="Reverse_Button_Clicked"/>
    </StackLayout>

</ContentPage>
